<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.assign.eckovationpart1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.pkmmte.view.CircularImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:src="@mipmap/sid"
            android:id="@+id/profile_image"
            app:shadow="true" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Robert Downey Jr."
                android:id="@+id/title"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="208"
                    android:gravity="center_vertical"
                    android:id="@+id/views"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@mipmap/eye"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:41 AM"
                    android:textSize="12sp"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/desc"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="Interestingly I have one in early January. I know the number but I do not know the day of the week."/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/image"/>

    <LinearLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/comments"
            android:background="#f5f5f5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Comments(7)"
            android:gravity="center"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/share"
            android:background="#f5f5f5"
            android:layout_width="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Share"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/likes"
            android:background="#f5f5f5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12 likes"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:drawableRight="@mipmap/heart"
            android:layout_marginRight="4dp"
            android:padding="12dp"/>
    </LinearLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f5f5f5"/>
</LinearLayout>
